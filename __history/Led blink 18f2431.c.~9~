#include <Led blink 18f2431.h>

void main()
{

   //Example blinking LED program
   while(true)
   {
      set_tris_a(0x00);       //Set all portB pins to be output
      output_bit(PIN_A2,0);   //Initialy turn the LED off
      output_bit(PIN_A2,1);   //Turn LED on
      delay_ms(500);          //Blinking period of 500ms =0.5s
      output_bit(PIN_A2,0);   //Turn LED off
   }

}
